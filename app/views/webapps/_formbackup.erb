<%= form_with(model: webapp) do |f| %>
  <% if webapp.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(webapp.errors.count, "error") %> prohibited this webapp from being saved:</h2>
      <ul>
        <% webapp.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :project_name, style: "display: block" %>
    <%= f.text_field :project_name %>
  </div>
  <%# allow multi-selection on developer %>
  <div id="developers">
    <%= f.fields_for :developers do |dev| %>
      <%= render 'developer_fields', f: dev %>
