        <%= dev.select :uniqname, options_for_select(Developer.all.map { |person| [person.uniqname, person.first_name] }, @developer.select), {}, { multiple: true } %>
        <%# <%= dev.select :uniqname, options_for_select(["Rena", "Debbie", "Dave"], { multiple: true })
      </div>
    <% end %>
        <div class='links'>
          <%= link_to_add_fields 'Add Developer', f, :developers %>
        </div>
      </div>
      <%# ----------------------------- %>
      <div>
        <%= f.label :language, style: "display: block" %>
        <%= f.text_field :language %>
      </div>
      <div>
        <%= f.label :framework, style: "display: block" %>
        <%= f.text_field :framework %>
      </div>
      <div>
        <%= f.label :description, style: "display: block" %>
        <%= f.text_area :description %>
      </div>
      <div>
        <%= f.label :notes, style: "display: block" %>
        <%= f.text_area :notes %>
      </div>
      <div>
